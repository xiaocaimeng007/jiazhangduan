<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b4000000"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg_focused"
        android:gravity="center"
        android:orientation="vertical" >
		<TextView 
		    android:id="@+id/bk_dialog_title"
		    android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@android:color/secondary_text_light_nodisable"
		    />
        <RelativeLayout
            android:id="@+id/rl_msg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dip"
            >

            <EditText
                android:id="@+id/bk_tv_msg"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingLeft="10dip"
                android:gravity="center"
                android:background="@null"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray" />
        </RelativeLayout>
		<View 
		    android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/lan"
		    />
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/bk_btn_cancel"
                    android:layout_width="fill_parent"
                    android:layout_height="55dip"
                    android:layout_weight="1"
                    android:background="@drawable/bk_dialog_btn_bg"
                    android:text="取消"
                    android:textColor="@color/lan" />
				<View 
				    android:id="@+id/bk_btn_span"
				    android:layout_height="fill_parent"
				    android:layout_width="1dip"
				    android:layout_gravity="center"
				    android:background="@color/lan"
				    />

				<Button
                    android:id="@+id/bk_btn_sure"
                    android:layout_width="fill_parent"
                    android:layout_height="55dip"
                    android:layout_weight="1"
                    android:background="@drawable/bk_dialog_btn_bg"
                    android:textColor="@color/lan"
                    android:text="確認" />
			</LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>